<%= render "admin/home/header" %>

<%= render "devise/shared/error_messages", resource: @genre %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
        	<h3>ジャンル編集画面</h3>
            <br>

            <%= form_for @genre,url: admin_genre_path(@genre.id) do |f| %>
                <div class="row">
                    <label class="col-md-3 col-md-offset-1">ジャンル</label>
                    <div class="col-md-3">
                        <%= f.text_field :name %>
                    </div>
                    <div class="col-md-6">
                        <%= f.submit "変更を保存する",class: "btn btn-primary" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>