<%= render "admin/home/header" %>


<div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-2">
			<h3>ブログ一覧画面</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<table class="table">
						<tr>
							<th>ブログID</th>
							<th>氏名</th>
							<th>タイトル</th>
							<th>紹介文</th>
							<th>画像</th>

						</tr>
					<tbody class="table-box">
						<% @blogs.each do |blog| %>
							<tr>
								<td><%= blog.id %></td>
								<td><%= link_to blog.user.name, admin_user_path(blog.user.id) %></td>
								<td><%= blog.title %></td>
								<td><%= blog.introduction %></td>
								<td><%= attachment_image_tag(blog, :image, :fill, 100, 100, fallback: "no_image.jpg") %></td>

							</tr>
						<% end %>
					</tbody>
			</table>

			<div class="paginate">
      			<%= paginate @blogs %>
    		</div>

		</div>
	</div>

</div>