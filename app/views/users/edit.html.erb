<%= render "users/header" %>

<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-2">

			<h2>会員情報編集</h2>

			<%= form_for(@user) do |f| %>

				<!-- エラーメッセージ表示-->
				    <% if @user.errors.any? %>
				        <%= @user.errors.count %>error prohibited this obj from being saved
				        <%= @user.errors.full_messages.each do |message| %>
							<%= message %>
				        <% end %>
				    <% end %>

				<!-- エラーメッセージ表示-->
				<div class="row">
					<div class="col-md-4 col-md-offset-1">ハンドルネーム</div>
					<div class="col-md-2"><%= f.text_field :name, class: "panel panel-default"  %></div>
				</div>

				<div class="row">
					<div class="col-md-4 col-md-offset-1">自己紹介</div>
					<div class="col-md-2"><%= f.text_area :introduction, class: "panel panel-default"  %></div>
				</div>

				<div class="row">
	      			<div class="col-md-4 col-md-offset-1">メールアドレス</div>
	        			<div class="col-md-2"><%= f.email_field :email, autocomplete: "email", class: "panel panel-default"  %></div>
	    		</div>

	    		<div class="row">
			      <div class="col-md-5 col-md-offset-1">電話番号(ハイフンなし)</div>
			        <div class="col-md-2"><%= f.telephone_field :telephone, class: "panel panel-default"  %></div>
			    </div>

			    <div class="row">
			    	<div class="col-md-5 col-md-offset-1">プロフィール画像</div>
			        <div class="col-md-2">
			        	<%= attachment_image_tag @user, :profile_image, :fill, 200,200, id: "attachment-image" %>
						<%= f.attachment_field :profile_image, direct: true, class: "edit-attachment",id: "click-attachment" %>
					</div>
			    </div>

				<div class="row" style="margin-top: 20px;">
					<div class="col-md-12 col-md-offset-1">
				    	<div class="row bttan">
				    		<div class="col-md-5 col-md-offset-1">
				        		<%= f.submit "編集内容を保存する", class: "btn btn-primary btn-block" %>
				      		</div>
				      		<div class="col-md-5 col-md-offset-">
				        		<%= link_to "退会する", users_confirm_path, class: "btn btn-danger btn-block" %>
				    		</div>
						</div>
				    </div>
				 </div>
			<% end %>
		</div>
	</div>
</div>