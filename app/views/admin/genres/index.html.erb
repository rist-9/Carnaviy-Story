

<div class="container">

	<div class="row">
		<h3 class="col-md-4 admin-genre-index-title">ジャンル追加・一覧</h3>
	</div>

	<!--ジャンル追加-->
	<%= form_for @genre,url: admin_genres_path, method: :post do |f| %>
	<div class="row">
		<label class="col-md-1 col-md-offset-1">ジャンル</label>
		<div class="col-md-2">
			<%= f.text_field :name %>
		</div>
		<div class="col-md-6">
			<%= f.submit "追加",class: "btn btn-primary" %>
		</div>
	</div>
	<% end %>

	<!--ジャンル一覧表示-->
	<div class="row">
		<div class="col-md-5 col-md-offset-1">
			<table class="table">
				<tr class="admin-genre-index-trheader">
					<th>ジャンル</th>
					<th></th>
				</tr>


				<% @genres.each do |genre| %>
				<tr class="table-box">
					<td><%= genre.name %></td>
					<td><%= link_to "編集する",edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>


</div>
