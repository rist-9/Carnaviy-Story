<%= render "users/header" %>

<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-2">

			<h2>会員情報編集</h2>

			<%= form_for(@user) do |f| %>

				<!-- エラーメッセージ表示-->
				<% if @user.errors.any? %>
					<h3><%= @user.errors.count %>error occurrence</h3>
					<ul>
						<% @user.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				<% end %>
				<!-- エラーメッセージ表示-->
				<div class="row">
					<div class="col-md-4 col-md-offset-1">ハンドルネーム</div>
					<div class="col-md-2"><%= f.text_field :name, class: "panel panel-default"  %></div>
				</div>

				<div class="row">
					<div class="col-md-4 col-md-offset-1">自己紹介</div>
					<div class="col-md-2"><%= f.text_area :introduction, class: "panel panel-default"  %></div>
				</div>

				<div class="row">
	      			<div class="col-md-4 col-md-offset-1">メールアドレス</div>
	        			<div class="col-md-2"><%= f.email_field :email, autocomplete: "email", class: "panel panel-default"  %></div>
	    		</div>

	    		<div class="row">
			      <div class="col-md-5 col-md-offset-1">電話番号(ハイフンなし)</div>
			        <div class="col-md-2"><%= f.telephone_field :telephone, class: "panel panel-default"  %></div>
			    </div>

			    <div class="row">
			    	<div class="col-md-5 col-md-offset-1">プロフィール画像</div>
			        <div class="col-md-2">
			        	<%= attachment_image_tag @blog, :image, :fill, 200,200, id: "attachment-image" %>
						<%= f.attachment_field :image, direct: true, class: "edit-attachment",id: "click-attachment" %>
					</div>
			    </div>

				<div class="row">
				    <div class="col-md-4 col-md-offset-4 submit-btn">
				      <%= f.submit "更新", class: "btn btn-success btn-block " %>
				    </div>
				  </div>

			<% end %>
		</div>
	</div>
</div>